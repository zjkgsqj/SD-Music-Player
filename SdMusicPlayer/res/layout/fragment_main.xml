<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic_background_005"
    tools:context="com.example.sdmusicplayer.MainActivity$PlaceholderFragment" >

    <LinearLayout
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/line_2"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/label_local_music"
            style="@style/MainFunctionText"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_local_32"
            android:text="@string/label_local_music" />

        <TextView
            android:id="@+id/label_my_favorite"
            style="@style/MainFunctionText"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="6dp"
            android:drawableLeft="@drawable/icon_favoritelist_32"
            android:text="@string/label_my_favorite" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:layout_above="@+id/line_3"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/label_recent_play"
            style="@style/MainFunctionText"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="3dp"
            android:drawableLeft="@drawable/icon_history_play_32"
            android:text="@string/label_recent_play" />

        <TextView
            android:id="@+id/label_play_list"
            style="@style/MainFunctionText"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="6dp"
            android:drawableLeft="@drawable/icon_play_lists_32"
            android:text="@string/label_play_list" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom ="6dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/label_recent_add"
            style="@style/MainFunctionText"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="3dp"
            android:drawableLeft="@drawable/icon_recent_add_32"
            android:text="@string/label_recent_add" />

        <TextView
            android:id="@+id/label_play_queue"
            style="@style/MainFunctionText"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="6dp"
            android:drawableLeft="@drawable/icon_play_queue_32"
            android:text="@string/label_play_queue" />
    </LinearLayout>

</RelativeLayout>